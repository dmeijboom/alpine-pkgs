builddir="$srcdir"

_destdir=""

build() {
  # Replace with proper build command(s)
  :
}

check() {
  # Replace with proper check command(s)
  :
}

package() {
  local destdir="$pkgdir/usr/share/zsh-plugins"

  install -D "$builddir/zsh-syntax-highlighting-0.7.1/.version" "$destdir/syntax-highlighting/.version"
  install -D "$builddir/zsh-syntax-highlighting-0.7.1/.revision-hash" "$destdir/syntax-highlighting/.revision-hash"
  install -D "$builddir/zsh-syntax-highlighting-0.7.1/zsh-syntax-highlighting.zsh" "$destdir/syntax-highlighting/plugin.zsh"
  cp -r "$builddir/zsh-syntax-highlighting-0.7.1/highlighters" "$destdir/syntax-highlighting/highlighters"
  install -D "$builddir/zsh-autosuggestions-0.6.4/zsh-autosuggestions.zsh" "$destdir/autosuggestions.zsh"
  install -D -m0755 "$builddir/starship" "$pkgdir/bin/starship"
}

