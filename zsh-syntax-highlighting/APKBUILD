package() {
  local destdir="$pkgdir/usr/share/zsh-plugins/syntax-highlighting"

  install -D "$builddir/.version" "$destdir/.version"
  install -D "$builddir/.revision-hash" "$destdir/.revision-hash"
  install -D "$builddir/zsh-syntax-highlighting.zsh" "$destdir/plugin.zsh"
  cp -r "$builddir/highlighters" "$destdir/highlighters"
}

